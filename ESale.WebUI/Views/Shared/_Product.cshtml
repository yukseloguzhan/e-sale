
@model ESale.Entities.Concrete.Product

<div class="col-md-4">
    <div class="card mb-3">
        <img src="~/img/@Model.ImageURL" alt="@Model.Name" />
        <div class="card-body">
            <h4 class="card-title">
                <a href="#">@Model.Name</a>
            </h4>
            <small class="text-muted">
                <i class="fas fa-lira-sign"></i> @Model.Price
            </small>
        </div>
        <div class="card-footer text-center">
            <a href="/Shops/Details/@Model.Id" class="btn btn-outline-primary btn-sm">Details</a>


            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Carts" asp-action="AddtoCart"  method="post" style="display:inline">


                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-outline-primary btn-sm ml-3">Add To Cart</button>

                </form>

            }






        </div>
    </div>
</div>