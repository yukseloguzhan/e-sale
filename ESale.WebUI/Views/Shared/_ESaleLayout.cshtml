
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="ESale" name="keywords">
    <meta content="ESale" name="description">

    <link href="~/Shop/img/favicon.ico" rel="icon">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="~/Shop/lib/slick/slick.css" rel="stylesheet">
    <link href="~/Shop/lib/slick/slick-theme.css" rel="stylesheet">
    <link href="~/Shop/css/style.css" rel="stylesheet">
</head>

<body>

    @await Html.PartialAsync("_Navbar")


    <div class="bottom-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <div class="logo">
                        <a asp-controller="Home" asp-action="Index2">
                            <img src="~/Shop/img/logo.png" alt="Logo">
                        </a>
                    </div>
                </div>



                <div class="col-md-6">
                    <div class="search">

                        @using (Html.BeginForm("SearchList", "Shops", FormMethod.Post))
                        {

                            <input type="text" name="productName" value="@ViewBag.productName" placeholder="Binlerce üründen istediğini ara">
                            <button><i class="fa fa-search"></i></button>
                        }


                    </div>
                </div>




                @*<div class="col-md-3">
                    <div class="user">
                        <a href="wishlist.html" class="btn wishlist">
                            <i class="fa fa-heart"></i>
                            <span id="favoryList">(0)</span>
                        </a>*@

                        @await Component.InvokeAsync("CartProductsCount")

                    @*</div>
                </div>*@
            </div>
        </div>
    </div>




    @RenderBody()


    <!-- Review End -->
    <!-- Footer Start -->
