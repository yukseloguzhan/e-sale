        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h2>Bilgi</h2>
                        <div class="contact-info">
                            <p><i class="fa fa-map-marker"></i>E-Satış, İstanbul, Türkiye</p>
                            <p><i class="fa fa-envelope"></i>yukseloguzhan53@gmail.com</p>
                            <p><i class="fa fa-phone"></i>0539 954 69 04</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h2>Takip edin</h2>
                        <div class="contact-info">
                            <div class="social">
                                <a href=""><i class="fab fa-twitter"></i></a>
                                <a href=""><i class="fab fa-facebook-f"></i></a>
                                <a href=""><i class="fab fa-linkedin-in"></i></a>
                                <a href=""><i class="fab fa-instagram"></i></a>
                                <a href=""><i class="fab fa-youtube"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h2>Hakkımızda</h2>
                        <ul>
                            <li><a href="#">Biz kimiz ?</a></li>
                            <li><a href="#">Neden biz ? </a></li>
                            <li><a href="#">Terms & Condition</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h2>Gizlilik şartları</h2>
                        <ul>
                            <li><a href="#">İletişim</a></li>
                            <li><a href="#">Kargo</a></li>
                            <li><a href="#">İade</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="row payment align-items-center">
                <div class="col-md-6">
                    <div class="payment-method">
                        <h2>Kartlar:</h2>
                        <img src="~/Shop/img/payment-method.png" alt="Payment Method" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="payment-security">
                        <h2>Güvenlik:</h2>
                        <img src="~/Shop/img/godaddy.svg" alt="Payment Security" />
