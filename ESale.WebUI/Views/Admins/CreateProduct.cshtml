@model ESale.WebUI.Models.ProductModel


@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}



<h1>Create Product</h1>
<hr />

<div class="row">
    <div class="col-md-8">

        <form asp-controller="Admins" asp-action="CreateProduct" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" value="@Model.Name" required class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageURL" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="ImageURL" value="@Model.ImageURL" required class="form-control" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="Description" required class="form-control">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Price" value="@Model.Price" required class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Ürün Görselleri</label>
                <div class="col-md-10">
                    <input type="file" name="ChosenFiles"
                           accept="image/png, image/jpeg"
                           maxlength="350"
                           class="form-control"
                           multiple
                           id="multiimagefile">
                    <span style="color:green">@Html.Raw(ViewBag.Message)</span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/ckeditor/ckeditor.js"></script>

    <script>

        CKEDITOR.replace("editor");

    </script>


}