@model ESale.WebUI.Models.ProductListModel


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}


<h1>Admin Products</h1>
<hr />

@if (Model.Products.Count() > 0)
{

    <table class="table table-bordered">
        <thead>
            <tr>
                <td style="width:30px;">Id</td>
                <td style="width:100px;">Image</td>
                <td>Name</td>
                <td style="width:12px;">Price</td>
                <td style="width:150px;"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <img src="~/ProductImages/@item.ImageURL" width="80" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-primary btn-sm mr-2" href="/Admin/Products/@item.Id">Edit</a>


                        <form action="/Admins/DeleteProduct" method="post" style="display:inline">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>

                        
                    </td>
                </tr>
            }

        </tbody>

    </table> }

        else
        {
            <div class="alert alert-warning">
                <h4>No Products</h4>
            </div>
        }


